{
    "files": ["src/test/browser/app.ts"],
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "declaration": true,
        "declarationDir": "dist",
        "strictNullChecks": true,
        "module": "esnext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
